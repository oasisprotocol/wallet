{
  "$schema": "https://raw.githubusercontent.com/lukaw3d/parcel-bundler-json-schemas/main/package_schema.json",
  "name": "oasis-wallet",
  "version": "0.0.0-development",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/oasisprotocol/oasis-wallet-web.git"
  },
  "scripts": {
    "build": "node ./internals/prod-web.js",
    "build:ext": "node ./internals/prod-ext.js",
    "clean": "rm -rf build/ .parcel-cache",
    "clean:ext": "rm -rf build-ext/ .parcel-cache",
    "start": "REACT_APP_META_CSP= HMR_PORT=2222 EXTENSION_CSP=`yarn --silent print-extension-csp` parcel --host localhost --port 3000 --dist-dir build-dev",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test": "jest --color",
    "test:web": "yarn run test --projects internals/jest/jest.web-config.js",
    "test:ext": "yarn run test --projects internals/jest/jest.ext-config.js",
    "test:watch": "yarn run test --watch",
    "test:generators": "ts-node --project=./internals/ts-node.tsconfig.json ./internals/testing/generators/test-generators.ts",
    "start:prod": "yarn run build && nodemon --watch ./build ./internals/scripts/serve-prod.js",
    "checkTs": "tsc --noEmit",
    "lint": "eslint --ext js,ts,tsx ./",
    "lint:fix": "yarn run lint --fix",
    "lint:css": "stylelint src/**/*.css",
    "generate": "cross-env TS_NODE_PROJECT='./internals/ts-node.tsconfig.json' plop --plopfile internals/generators/plopfile.ts",
    "prettify": "prettier --write",
    "extract-messages": "i18next-scanner --config=internals/extractMessages/i18next-scanner.config.js",
    "semantic-release": "semantic-release",
    "print-csp": "node ./internals/scripts/print-csp.js",
    "print-extension-csp": "node ./internals/scripts/print-extension-csp.js",
    "dump-validators": "CI=1 jest --roots ./internals --testMatch '<rootDir>/internals/scripts/dump_validators.ts'"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not ios_saf < 13"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "not ios_saf < 13"
    ]
  },
  "nyc": {
    "exclude": [
      "src/vendors",
      "**/vendors/**"
    ],
    "excludeAfterRemap": true,
    "report-dir": "cypress-coverage"
  },
  "dependencies": {
    "@ledgerhq/hw-transport-webusb": "6.20.0",
    "@metamask/jazzicon": "2.0.0",
    "@oasisprotocol/client": "0.1.0-alpha8",
    "@oasisprotocol/ledger": "0.2.3",
    "@reduxjs/toolkit": "1.7.1",
    "base64-arraybuffer": "1.0.2",
    "bech32": "2.0.0",
    "bignumber.js": "9.0.2",
    "bip39": "3.0.4",
    "body-scroll-lock": "4.0.0-beta.0",
    "chalk": "5.0.1",
    "copy-to-clipboard": "3.3.2",
    "grommet": "2.25.1",
    "grommet-icons": "4.7.0",
    "i18next": "20.6.1",
    "i18next-browser-languagedetector": "6.1.4",
    "qrcode.react": "3.1.0",
    "react": "17.0.2",
    "react-app-polyfill": "3.0.0",
    "react-data-table-component": "6.11.8",
    "react-dom": "17.0.2",
    "react-helmet-async": "1.3.0",
    "react-i18next": "11.17.4",
    "react-redux": "7.2.8",
    "react-router-dom": "5.3.3",
    "react-test-renderer": "17.0.2",
    "react-transition-group": "4.4.2",
    "redux-saga": "1.1.3",
    "styled-components": "5.3.5",
    "tweetnacl": "1.0.3",
    "typed-redux-saga": "1.3.1",
    "valid-url": "1.0.9",
    "webext-redux": "2.1.9"
  },
  "devDependencies": {
    "@cypress/code-coverage": "3.9.12",
    "@parcel/config-webextension": "2.6.2",
    "@parcel/packager-raw-url": "2.6.2",
    "@parcel/transformer-webmanifest": "2.6.2",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@testing-library/cypress": "8.0.3",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "12.1.5",
    "@testing-library/react-hooks": "7.0.2",
    "@testing-library/user-event": "13.5.0",
    "@types/body-scroll-lock": "3.1.0",
    "@types/jest": "27.4.1",
    "@types/jest-when": "3.5.2",
    "@types/node": "16.11.47",
    "@types/node-fetch": "3.0.3",
    "@types/qrcode.react": "1.0.2",
    "@types/react": "17.0.47",
    "@types/react-dom": "17.0.17",
    "@types/react-redux": "7.1.24",
    "@types/react-router-dom": "5.3.3",
    "@types/react-test-renderer": "17.0.2",
    "@types/react-transition-group": "4.4.5",
    "@types/rimraf": "3.0.2",
    "@types/shelljs": "0.8.11",
    "@types/styled-components": "5.1.25",
    "@types/testing-library__jest-dom": "5.14.5",
    "@types/valid-url": "1.0.3",
    "@types/w3c-web-usb": "1.0.6",
    "@typescript-eslint/eslint-plugin": "5.32.0",
    "@typescript-eslint/parser": "5.32.0",
    "babel-jest": "27.5.1",
    "babel-plugin-istanbul": "6.1.1",
    "babel-preset-react-app": "10.0.1",
    "cross-env": "7.0.3",
    "cypress": "9.3.1",
    "eslint": "8.21.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "i18next-scanner": "3.3.0",
    "i18next-scanner-typescript": "1.0.6",
    "jest": "27.5.1",
    "jest-styled-components": "7.0.5",
    "jest-watch-typeahead": "2.0.0",
    "jest-when": "3.5.1",
    "node-plop": "0.26.3",
    "nodemon": "2.0.19",
    "parcel": "2.6.2",
    "parcel-transformer-env-variables-injection": "0.1.2",
    "plop": "2.7.6",
    "portable-fetch": "3.0.0",
    "prettier": "2.7.1",
    "redux-saga-test-plan": "4.0.5",
    "rimraf": "3.0.2",
    "sanitize.css": "13.0.0",
    "semantic-release": "18.0.1",
    "serve-handler": "6.1.3",
    "shelljs": "0.8.5",
    "stylelint": "14.9.1",
    "stylelint-config-recommended": "6.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.10.0",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  },
  "resolutions": {
    "@typescript-eslint/eslint-plugin": "5.32.0",
    "eslint-plugin-react": "7.30.1"
  },
  "alias": {
    "locales": "./src/locales",
    "utils": "./src/utils",
    "app": "./src/app",
    "types": "./src/types",
    "styles": "./src/styles",
    "config": "./src/config",
    "store": "./src/store",
    "vendors": "./src/vendors"
  },
  "targets": {
    "// see also .parcelrc and .terserrc": {},
    "web": {
      "source": "public/index.html",
      "distDir": "./build",
      "context": "browser",
      "scopeHoist": false
    },
    "// https://parceljs.org/recipes/web-extension/#hmr": {},
    "ext": {
      "source": "public/manifest.json",
      "distDir": "./build-ext",
      "scopeHoist": false
    }
  }
}
