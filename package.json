{
  "name": "oasis-wallet",
  "version": "0.0.0-development",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Esya/oasis-wallet.git"
  },
  "scripts": {
    "clean": "rm -rf build/ .parcel-cache",
    "parcel:dev": "parcel --port 3000 --target web --dist-dir build src/index.html",
    "parcel:prod": "parcel build --target web --dist-dir build src/index.html",
    "start": "node ./internals/dev-scripts.js",
    "start:oasismonitor": "REACT_APP_BACKEND=oasismonitor yarn start",
    "start:oasisscan": "REACT_APP_BACKEND=oasisscan yarn start",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "build": "yarn clean && node ./internals/prod-scripts.js",
    "build:oasismonitor": "REACT_APP_BACKEND=oasismonitor yarn build",
    "build:oasisscan": "REACT_APP_BACKEND=oasisscan yarn build",
    "test": "jest --color --silent",
    "test:watch": "jest --watch --color --silent",
    "test:generators": "ts-node --project=./internals/ts-node.tsconfig.json ./internals/testing/generators/test-generators.ts",
    "start:prod": "yarn run build:oasisscan && nodemon --watch ./build ./internals/scripts/serve-prod.js",
    "checkTs": "tsc --noEmit",
    "eslint": "eslint --ext js,ts,tsx",
    "lint": "yarn run eslint src",
    "lint:fix": "yarn run eslint --fix src",
    "lint:css": "stylelint src/**/*.css",
    "generate": "cross-env TS_NODE_PROJECT='./internals/ts-node.tsconfig.json' plop --plopfile internals/generators/plopfile.ts",
    "cleanAndSetup": "ts-node --project=./internals/ts-node.tsconfig.json ./internals/scripts/clean.ts",
    "prettify": "prettier --write",
    "extract-messages": "i18next-scanner --config=internals/extractMessages/i18next-scanner.config.js",
    "semantic-release": "semantic-release",
    "print-csp": "node ./internals/scripts/print-csp.js",
    "dump-validators": "CI=1 react-scripts test --roots ./internals --testMatch '<rootDir>/internals/scripts/dump_validators.ts'"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "yarn run eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not ios_saf < 13"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "not ios_saf < 13"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "nyc": {
    "exclude": [
      "src/vendors",
      "**/vendors/**"
    ],
    "excludeAfterRemap": true,
    "report-dir": "cypress-coverage"
  },
  "dependencies": {
    "@ledgerhq/hw-transport-webusb": "6.20.0",
    "@oasisprotocol/client": "0.1.0-alpha8",
    "@oasisprotocol/ledger": "0.2.1",
    "@reduxjs/toolkit": "1.7.1",
    "babel-jest": "27.5.1",
    "babel-plugin-istanbul": "6.1.1",
    "base64-arraybuffer": "1.0.1",
    "bech32": "2.0.0",
    "bip39": "3.0.4",
    "body-scroll-lock": "4.0.0-beta.0",
    "chalk": "4.1.2",
    "connected-react-router": "6.9.2",
    "copy-to-clipboard": "3.3.1",
    "cross-env": "7.0.3",
    "fontfaceobserver": "2.1.0",
    "grommet": "2.21.0",
    "grommet-icons": "4.7.0",
    "husky": "7.0.4",
    "i18next": "20.6.1",
    "i18next-browser-languagedetector": "6.1.2",
    "portable-fetch": "3.0.0",
    "prettier": "2.5.1",
    "qrcode.react": "1.0.1",
    "react": "17.0.2",
    "react-app-polyfill": "3.0.0",
    "react-data-table-component": "6.11.8",
    "react-dom": "17.0.2",
    "react-helmet-async": "1.2.2",
    "react-i18next": "11.15.3",
    "react-redux": "7.2.6",
    "react-router-dom": "5.3.0",
    "react-test-renderer": "17.0.2",
    "react-transition-group": "4.4.2",
    "redux-injectors": "1.3.0",
    "redux-saga": "1.1.3",
    "replace-in-file": "6.3.2",
    "rimraf": "3.0.2",
    "styled-components": "5.3.1",
    "ts-jest": "27.1.3",
    "tweetnacl": "1.0.3",
    "typed-redux-saga": "1.3.1",
    "typescript": "4.5.4",
    "valid-url": "1.0.9",
    "web-vitals": "2.1.2"
  },
  "devDependencies": {
    "@cypress/code-coverage": "3.9.12",
    "@parcel/packager-raw-url": "2.3.2",
    "@parcel/transformer-webmanifest": "2.3.2",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@testing-library/cypress": "8.0.2",
    "@testing-library/jest-dom": "5.16.2",
    "@testing-library/react": "12.1.2",
    "@testing-library/user-event": "13.5.0",
    "@types/body-scroll-lock": "3.1.0",
    "@types/fontfaceobserver": "2.1.0",
    "@types/jest": "27.4.0",
    "@types/jest-when": "2.7.4",
    "@types/node": "16.11.21",
    "@types/node-fetch": "3.0.3",
    "@types/qrcode.react": "1.0.2",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "@types/react-redux": "7.1.22",
    "@types/react-router-dom": "5.3.3",
    "@types/react-test-renderer": "17.0.1",
    "@types/react-transition-group": "4.4.4",
    "@types/rimraf": "3.0.2",
    "@types/shelljs": "0.8.11",
    "@types/styled-components": "5.1.15",
    "@types/testing-library__jest-dom": "5.14.2",
    "@types/valid-url": "1.0.3",
    "babel-preset-react-app": "10.0.1",
    "cypress": "9.3.1",
    "eslint": "8.10.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-react-app": "7.0.0",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-react-hooks": "4.3.0",
    "i18next-scanner": "3.1.0",
    "i18next-scanner-typescript": "1.0.6",
    "inquirer": "8.2.0",
    "inquirer-directory": "2.2.0",
    "jest": "27.5.1",
    "jest-styled-components": "7.0.5",
    "jest-watch-typeahead": "1.0.0",
    "jest-when": "3.5.0",
    "lint-staged": "12.1.7",
    "node-plop": "0.26.3",
    "nodemon": "2.0.15",
    "parcel": "2.3.2",
    "parcel-namer-rewrite": "2.0.0-rc.2",
    "plop": "2.7.6",
    "posthtml-expressions": "1.9.0",
    "redux-saga-test-plan": "4.0.4",
    "sanitize.css": "13.0.0",
    "semantic-release": "18.0.1",
    "serve-handler": "6.1.3",
    "shelljs": "0.8.5",
    "stylelint": "14.2.0",
    "stylelint-config-recommended": "6.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.10.0",
    "ts-node": "10.4.0"
  },
  "engines": {
    "node": ">=10.13.0",
    "npm": ">=6.4.1"
  },
  "husky(remove-everything-in-these-parentheses.See-the-issue-#29)": {
    "hooks": {
      "pre-commit": "yarn run checkTs && lint-staged"
    }
  },
  "alias": {
    "utils": "./src/utils",
    "app": "./src/app",
    "types": "./src/types",
    "styles": "./src/styles",
    "config": "./src/config",
    "store": "./src/store",
    "reportWebVitals": "./src/reportWebVitals.ts",
    "vendors": "./src/vendors"
  },
  "targets": {
    "web": {
      "context": "browser"
    }
  },
  "parcel-namer-rewrite": {
    "developmentHashing": true,
    "rules": {
      "(.*).png": "$1.png"
    },
    "silent": true
  }
}
