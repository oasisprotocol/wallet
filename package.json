{
  "$schema": "https://raw.githubusercontent.com/lukaw3d/parcel-bundler-json-schemas/main/package_schema.json",
  "name": "oasis-wallet",
  "version": "0.0.0-development",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/oasisprotocol/oasis-wallet-web.git"
  },
  "scripts": {
    "build": "node ./internals/scripts/build-web.js",
    "build:ext": "node ./internals/scripts/build-ext.js",
    "clean": "rm -rf build/ .parcel-cache",
    "clean:ext": "rm -rf build-ext/ .parcel-cache",
    "start": "REACT_APP_META_CSP= HMR_PORT=2222 EXTENSION_CSP=`yarn --silent print-extension-csp` parcel --host localhost --port 3000 --dist-dir build-dev",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test": "jest --color",
    "test:watch": "yarn run test --watch",
    "start:prod": "yarn run build && node ./internals/scripts/serve-prod.js",
    "checkTs": "tsc --noEmit",
    "lint": "eslint --ext js,ts,tsx ./",
    "lint:fix": "yarn run lint --fix",
    "lint:css": "stylelint src/**/*.css",
    "extract-messages": "i18next-scanner --config=internals/extractMessages/i18next-scanner.config.js",
    "print-csp": "node ./internals/scripts/print-csp.js",
    "print-extension-csp": "node ./internals/scripts/print-extension-csp.js"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not ios_saf < 13",
      "not android <= 4.4.4",
      "not ie <= 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "not ios_saf < 13"
    ]
  },
  "nyc": {
    "exclude": [
      "src/vendors",
      "**/vendors/**"
    ],
    "excludeAfterRemap": true,
    "report-dir": "cypress-coverage"
  },
  "dependencies": {
    "@ethereumjs/util": "8.0.3",
    "@ledgerhq/hw-transport-webusb": "6.27.10",
    "@metamask/jazzicon": "2.0.0",
    "@oasisprotocol/client": "0.1.0-alpha9",
    "@oasisprotocol/client-rt": "0.2.0-alpha10",
    "@oasisprotocol/ledger": "0.2.3",
    "@reduxjs/toolkit": "1.9.2",
    "base64-arraybuffer": "1.0.2",
    "bech32": "2.0.0",
    "bignumber.js": "9.1.1",
    "bip39": "3.0.4",
    "body-scroll-lock": "4.0.0-beta.0",
    "copy-to-clipboard": "3.3.3",
    "grommet": "2.29.1",
    "grommet-icons": "4.9.0",
    "i18next": "22.4.9",
    "i18next-browser-languagedetector": "7.0.1",
    "qrcode.react": "3.1.0",
    "react": "18.2.0",
    "react-app-polyfill": "3.0.0",
    "react-data-table-component": "6.11.8",
    "react-dom": "18.2.0",
    "react-helmet-async": "1.3.0",
    "react-i18next": "12.1.5",
    "react-redux": "7.2.9",
    "react-router-dom": "6.8.1",
    "react-test-renderer": "18.2.0",
    "redux-saga": "1.2.2",
    "redux-state-sync": "3.1.4",
    "styled-components": "5.3.6",
    "tweetnacl": "1.0.3",
    "typed-redux-saga": "1.5.0",
    "valid-url": "1.0.9",
    "webext-redux": "2.1.9",
    "webextension-polyfill": "0.10.0"
  },
  "devDependencies": {
    "@cypress/code-coverage": "3.10.0",
    "@parcel/config-webextension": "2.8.3",
    "@parcel/packager-raw-url": "2.8.3",
    "@parcel/transformer-webmanifest": "2.8.3",
    "@testing-library/cypress": "9.0.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@types/body-scroll-lock": "3.1.0",
    "@types/jest": "29.2.6",
    "@types/jest-when": "3.5.2",
    "@types/react": "17.0.53",
    "@types/react-dom": "18.0.10",
    "@types/react-redux": "7.1.25",
    "@types/react-test-renderer": "18.0.0",
    "@types/redux-state-sync": "3.1.5",
    "@types/styled-components": "5.1.26",
    "@types/testing-library__jest-dom": "5.14.5",
    "@types/valid-url": "1.0.3",
    "@types/w3c-web-usb": "1.0.6",
    "@types/webextension-polyfill": "0.10.0",
    "@typescript-eslint/eslint-plugin": "5.50.0",
    "@typescript-eslint/parser": "5.50.0",
    "babel-plugin-istanbul": "6.1.1",
    "cypress": "12.3.0",
    "eslint": "8.33.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "i18next-scanner": "4.1.1",
    "i18next-scanner-typescript": "1.0.6",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "jest-styled-components": "7.1.1",
    "jest-when": "3.5.2",
    "parcel": "2.8.3",
    "parcel-transformer-env-variables-injection": "0.1.2",
    "portable-fetch": "3.0.0",
    "prettier": "2.8.3",
    "process": "0.11.10",
    "redux-saga-test-plan": "4.0.6",
    "sanitize.css": "13.0.0",
    "serve-handler": "6.1.5",
    "stream-browserify": "3.0.0",
    "string_decoder": "1.3.0",
    "stylelint": "14.16.1",
    "stylelint-config-recommended": "9.0.0",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5"
  },
  "resolutions": {
    "@ledgerhq/hw-transport": "^6.27.6",
    "@testing-library/dom": "8.20.0",
    "@typescript-eslint/eslint-plugin": "5.50.0",
    "eslint-plugin-react": "7.32.2",
    "grommet-icons": "4.9.0",
    "typescript": "4.9.5"
  },
  "//": "Parcel doesn't support subpath patterns #7840. We need an alias for @ledgerhq/devices",
  "alias": {
    "@ledgerhq/devices": "@ledgerhq/devices/lib-es",
    "locales": "./src/locales",
    "utils": "./src/utils",
    "app": "./src/app",
    "types": "./src/types",
    "styles": "./src/styles",
    "config": "./src/config",
    "store": "./src/store",
    "vendors": "./src/vendors"
  },
  "targets": {
    "// see also .parcelrc and .terserrc": {},
    "web": {
      "source": "public/index.html",
      "distDir": "./build",
      "context": "browser",
      "scopeHoist": false
    },
    "// https://parceljs.org/recipes/web-extension/#hmr": {},
    "ext": {
      "source": "public/manifest.json",
      "distDir": "./build-ext",
      "scopeHoist": false
    }
  }
}
